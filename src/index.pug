doctype html
html(lang="en")
	head
		meta(charset="utf-8")

		title="Vanilla JavaScript Carousel"
		link(rel="stylesheet" href="vanilla-js-carousel.css")

	body
		section
			div#carousel.js-Carousel
				ul
					- var i = 1;
					while i < 5
						li: img(src="../docs/images/nature-" + i++ + ".jpg" alt="")

		script(src="vanilla-js-carousel.min.js")
		script.
			var carousel = new Carousel({
				elem: 'carousel',
				dots: true,
				arrows: true,
				buttons: true,
				autoplay: true,
				infinite: true
			});